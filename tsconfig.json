{
  "compilerOptions": {
    /* Convex-friendly strict typechecking */
    "allowJs": true,
    "strict": true,

    /* Convex-required options */
    "target": "ESNext",
    "lib": ["ES2021", "dom"],
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": true,

    /* Helpful for Next.js alias imports */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    /* Optional: If using plugins like Next.js */
    "plugins": [{ "name": "next" }]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "convex"],
  "exclude": ["node_modules"]
}
