"use client";

import React from "react";
import ReactDOM from "react-dom";
import { motion, AnimatePresence } from "framer-motion";
import { X, Mic, MicOff, Sparkles } from "lucide-react";
import { Button } from "@/components/ui/button";
import { useUser, useAuth } from "@clerk/nextjs";
import { speakWithOpenAI } from "@/lib/tts";
import { makeAuthedFetch } from "@/utils/authedFetch";
import { useAuth } from "@clerk/nextjs";

type Role = "system" | "user" | "assistant";
type IntakeState = "idle" | "askDeviceModel" | "askIssue" | "confirm" | "done";

type Part = {
  title: string;
  device?: string;
  category?: string;
  partPrice?: number;
  labor?: number;
  total?: number;
  type?: "Premium" | "Economical" | string;
  eta?: string;
  image?: string;
  source?: string;
  createdAt?: number;
};

export default function AssistantLauncher({
  onAssistantMessage,
}: {
  onAssistantMessage?: (s: string) => void;
}) {
  // Clerk
const { isSignedIn, getToken } = useAuth();
if (!isSignedIn) {
  throw new Error("Please sign in first.");
}

const token = await getToken({ /* template: "convex", */ skipCache: true });
// If you configured a JWT Template for Convex, pass template: "convex"

const res = await fetch("/api/portal/invoices", {
  method: "POST",
  headers: {
    "Content-Type": "application/json",
    ...(token ? { Authorization: `Bearer ${token}` } : {}),
  },
  body: JSON.stringify(payload),
});
if (!res.ok) {
  const t = await res.text().catch(() => "");
  throw new Error(t || `Save failed (HTTP ${res.status})`);
}

  // UI state
  const [mounted, setMounted] = React.useState(false);
  const [open, setOpen] = React.useState(false);
  const [messages, setMessages] = React.useState<
    Array<{ role: Role; content: string; thinking?: boolean }>
  >([]);
  const [busy, setBusy] = React.useState(false);
  const [muted, setMuted] = React.useState(false);

  // Intake state
  const [intakeState, setIntakeState] = React.useState<IntakeState>("idle");
  const [intake, setIntake] = React.useState<any>({});
  const [lastParts, setLastParts] = React.useState<Part[] | null>(null);
  const [selectedPart, setSelectedPart] = React.useState<Part | null>(null);

  // Stable refs for timeouts
  const lastPartsRef = React.useRef<Part[] | null>(null);
  const selectedPartRef = React.useRef<Part | null>(null);
  React.useEffect(() => void (lastPartsRef.current = lastParts), [lastParts]);
  React.useEffect(() => void (selectedPartRef.current = selectedPart), [selectedPart]);

  // Prevent duplicate portals in dev/HMR
  React.useEffect(() => {
    const key = "__ETHUB_ASSISTANT_LAUNCHER__";
    if ((window as any)[key]) return;
    (window as any)[key] = true;
    setMounted(true);
    return () => {
      delete (window as any)[key];
    };
  }, []);

  // Prefill from Clerk
  React.useEffect(() => {
    if (!isLoaded || !user) return;
    setIntake((s: any) => ({
      ...s,
      name:
        s.name ??
        (user.firstName
          ? `${user.firstName}${user.lastName ? " " + user.lastName : ""}`
          : user.fullName ?? undefined),
      email:
        s.email ??
        (user.primaryEmailAddress?.emailAddress ??
          user.emailAddresses?.[0]?.emailAddress),
      phone: s.phone ?? user.phoneNumbers?.[0]?.phoneNumber ?? undefined,
    }));
  }, [isLoaded, user]);

  // TTS queue (speak only helpful text; skip URLs/JSON blobs)
  const [ttsQueue, setTtsQueue] = React.useState<string[]>([]);
  const [ttsPlaying, setTtsPlaying] = React.useState(false);

  function stripUnspeakable(text: string): string | null {
    try {
      JSON.parse(text); // control message
      return null;
    } catch {}
    const noUrls = text.replace(/https?:\/\/\S+/g, "").trim();
    return noUrls || null;
  }

  React.useEffect(() => {
    if (!ttsPlaying && ttsQueue.length > 0 && !muted) {
      const next = ttsQueue[0];
      const speakable = stripUnspeakable(next);
      if (!speakable) {
        setTtsQueue((q) => q.slice(1));
        return;
      }
      setTtsPlaying(true);
      speakWithOpenAI(speakable, { voice: "alloy", format: "mp3" })
        .catch(() => {})
        .finally(() => {
          setTtsQueue((q) => q.slice(1));
          setTtsPlaying(false);
        });
    }
  }, [ttsQueue, ttsPlaying, muted]);

  function enqueueTTS(message: string) {
    setTtsQueue((q) => [...q, message]);
  }

  function pushMessage(m: { role: Role; content: string; thinking?: boolean }) {
    setMessages((prev) => [...prev, m]);
    if (m.role === "assistant") enqueueTTS(m.content);
    if (m.role === "assistant" && onAssistantMessage) {
      try {
        JSON.parse(m.content);
      } catch {
        onAssistantMessage?.(m.content);
      }
    }
  }

  function clearConversation(keepPrefill = true) {
    setMessages([]);
    setIntake(
      keepPrefill
        ? { name: intake.name, email: intake.email, phone: intake.phone }
        : {}
    );
    setIntakeState("idle");
    setLastParts(null);
    setSelectedPart(null);
  }

  // Hints & validators
  function hintForField(field: "device" | "issue") {
    if (field === "device") {
      return "Tip: the exact model is in Settings ‚Üí About. If you‚Äôre not sure, share the brand and any letters/numbers you see.";
    }
    return 'Tip: short and specific helps ‚Äî ‚ÄúScreen cracked (touch works)‚Äù, ‚ÄúBattery drains fast‚Äù, or ‚ÄúPhone won‚Äôt boot‚Äù.';
  }

  function looksLikeFullModel(text: string) {
    return (
      /\b(iphone|ipad|macbook|galaxy|pixel|oneplus|motorola|xiaomi|nokia|surface|sony|htc)\b/i.test(
        text
      ) ||
      /\b[A-Z]{1,3}\d{2,4}\b/.test(text) ||
      /\bSM-?\w+\b/i.test(text)
    );
  }

  function detectManufacturer(model?: string | null): string | null {
    if (!model) return null;
    const s = model.toLowerCase();
    if (s.includes("iphone") || s.includes("ipad") || s.includes("mac"))
      return "Apple";
    if (s.includes("galaxy") || s.includes("sm-") || s.includes("samsung"))
      return "Samsung";
    if (s.includes("pixel")) return "Google";
    if (s.includes("oneplus")) return "OnePlus";
    if (s.includes("motorola") || s.includes("moto")) return "Motorola";
    if (s.includes("xiaomi") || s.includes("redmi") || s.includes("mi"))
      return "Xiaomi";
    if (s.includes("nokia")) return "Nokia";
    if (s.includes("sony") || s.includes("xperia")) return "Sony";
    if (s.includes("surface") || s.includes("microsoft")) return "Microsoft";
    return null;
  }

  // Fetch prices + images
  async function fetchPartsAndImages(query: string) {
    if (!query || query.trim().length < 3) return null;

    try {
      const [pricesRes, imagesRes] = await Promise.all([
        fetch(`/api/mobilesentrix/prices?query=${encodeURIComponent(query)}`, {
          cache: "no-store",
        }),
        fetch(`/api/image-search?query=${encodeURIComponent(query)}&num=6`, {
          cache: "no-store",
        }),
      ]);

      let recommended: Part | null = null;
      let alternative: Part | null = null;
      let images: any[] = [];

      if (pricesRes.ok) {
        const pj = await pricesRes.json();
        recommended = pj.recommended ?? null;
        alternative = pj.alternative ?? null;
      }

      if (imagesRes.ok) {
        const ij = await imagesRes.json();
        images = ij.images ?? [];
      }

      const pickImage = (title?: string | null) => {
        if (!images?.length) return null;
        if (!title) return images[0]?.url || images[0]?.link || null;
        const t = title.toLowerCase();
        for (const im of images) {
          const cand = im.url || im.link || im.thumbnail || im.image || im.src;
          const meta = `${im.title ?? ""} ${im.alt ?? ""} ${im.contextLink ?? ""}`.toLowerCase();
          if (meta.includes(t)) return cand;
        }
        return images[0]?.url || images[0]?.link || null;
      };

      if (recommended) {
        recommended = {
          ...recommended,
          type: recommended.type || "Premium",
          eta: recommended.eta || "About 2 hours",
          image: recommended.image || pickImage(recommended.title) || undefined,
        };
      }
      if (alternative) {
        alternative = {
          ...alternative,
          type: alternative.type || "Economical",
          eta: alternative.eta || "About 2 hours",
          image: alternative.image || pickImage(alternative.title) || undefined,
        };
      }

      return { recommended, alternative };
    } catch (err) {
      console.error("fetchPartsAndImages error:", err);
      return null;
    }
  }

  // FSM
  function startIntake() {
    if (!user) {
      pushMessage({
        role: "assistant",
        content: "Welcome to ETHUB ‚Äî please sign in so I can start your repair intake.",
      });
      return;
    }
    pushMessage({
      role: "assistant",
      content: "‚ú® I‚Äôm ETHUB‚Äôs Assistant. What‚Äôs the device name and exact model?",
    });
    setIntakeState("askDeviceModel");
  }

  async function handleUserInput(raw: string) {
    const text = raw.trim();
    if (!text) return;

    // echo user sometimes to confirm we heard them
    pushMessage({ role: "user", content: text });

    switch (intakeState) {
      case "idle": {
        if (/^(start|hi|hello|yes|ready)/i.test(text)) startIntake();
        else pushMessage({ role: "assistant", content: "Say **start** and I‚Äôll guide your repair intake ‚ú®" });
        break;
      }

      case "askDeviceModel": {
        if (!looksLikeFullModel(text)) {
          pushMessage({
            role: "assistant",
            content: `I think we still need the exact model. ${hintForField("device")}`,
          });
          return;
        }
        setIntake((s: any) => ({ ...s, deviceAndModel: text }));
        pushMessage({
          role: "assistant",
          content: `Got it ‚Äî **${text}**. What‚Äôs the issue and service you want? Here‚Äôs an example: ‚ÄúScreen cracked (touch works)‚Äù.`,
        });
        setIntakeState("askIssue");
        break;
      }

      case "askIssue": {
        setIntake((s: any) => ({ ...s, issue: text, service: text }));
        const summary = {
          ID: `IC-${Date.now().toString().slice(-6)}`,
          Description: `${intake.deviceAndModel ?? ""} ‚Äî ${text}`,
          Service: text,
        };
        setIntake((s: any) => ({ ...s, summary }));
        pushMessage({
          role: "assistant",
          content: `Let‚Äôs confirm:\n‚Ä¢ Device: ${intake.deviceAndModel}\n‚Ä¢ Issue/Service: ${text}\n\nReply **yes** and I‚Äôll check parts & pricing, or say **edit** to adjust.`,
        });
        setIntakeState("confirm");
        break;
      }

      case "confirm": {
        if (/^y(es)?$/i.test(text)) {
          pushMessage({
            role: "assistant",
            content: "Finding the best parts and live pricing‚Ä¶ üí´",
            thinking: true,
          });

          const q = `${intake.deviceAndModel ?? ""} ${intake.service ?? ""}`.trim();
          const results = await fetchPartsAndImages(q);

          // stop thinking
          setMessages((prev) => prev.map((m) => (m.thinking ? { ...m, thinking: false } : m)));

          if (!results || (!results.recommended && !results.alternative)) {
            pushMessage({
              role: "assistant",
              content:
                "I couldn‚Äôt load parts right now. We can try again, or I can note a manual estimate and keep you moving.",
            });
            return;
          }

          const bundle = [results.recommended, results.alternative].filter(Boolean) as Part[];
          setLastParts(bundle);

          // emit carousel control block
          pushMessage({
            role: "assistant",
            content: JSON.stringify({
              type: "parts_suggestion",
              parts: bundle,
              context: { device: intake.deviceAndModel, issue: intake.service },
            }),
          });

          setIntakeState("done");

          // default to Premium after 10s if no selection
          setTimeout(() => {
            if (selectedPartRef.current) return;
            const lp = lastPartsRef.current;
            if (!lp || !lp.length) return;
            const premium = lp.find((p) => p.type === "Premium") ?? lp[0];
            if (!premium) return;
            pushMessage({
              role: "assistant",
              content:
                "I‚Äôll go with the premium option for quality and longevity. If you prefer the economical alternative, tell me and I‚Äôll switch it.",
            });
            void onApprovePart(premium);
          }, 10000);
        } else if (/^edit/i.test(text)) {
          pushMessage({ role: "assistant", content: "No problem ‚Äî share the updated device + model or the corrected issue." });
          setIntakeState("askDeviceModel");
        } else {
          pushMessage({ role: "assistant", content: "Intake paused. Say **start** when you‚Äôre ready ‚ú®" });
          setIntakeState("idle");
        }
        break;
      }

      case "done": {
        // typed approval: approve / approve premium / approve economical|alt|eco
        const approveMatch = text.match(/^approve(?:\s+(premium|economical|alt|eco))?$/i);
        if (approveMatch) {
          let choice = approveMatch[1]?.toLowerCase();
          let part: Part | null = null;

          if (lastParts && lastParts.length) {
            if (!choice) {
              part = lastParts.find((p) => p.type === "Premium") ?? lastParts[0];
            } else if (choice.includes("premium")) {
              part = lastParts.find((p) => p.type === "Premium") ?? lastParts[0];
            } else if (/(economical|eco|alt)/i.test(choice)) {
              part = lastParts.find((p) => p.type !== "Premium") ?? lastParts[lastParts.length - 1];
            }
          }

          if (!part) {
            pushMessage({
              role: "assistant",
              content: "I don‚Äôt see any parts to approve. Say **start** to begin a new intake.",
            });
            break;
          }

          setSelectedPart(part);
          await onApprovePart(part);
          break;
        }

        if (/^(start|new)/i.test(text)) {
          clearConversation();
        } else {
          pushMessage({
            role: "assistant",
            content:
              "Ready when you are. You can **approve**, **approve premium**, or **approve economical**. I‚Äôll queue your repair as soon as you choose ‚ú®",
          });
        }
        break;
      }
    }
  }

  // Save invoice
  async function onApprovePart(part: Part) {
    const summary = intake.summary ?? {};
    const manufacturer = detectManufacturer(intake.deviceAndModel) ?? null;
    const quote = part.total ?? (part.partPrice ?? 0) + (part.labor ?? 100);

    const payload = {
      ticketId: summary.ID ?? `IC-${Date.now().toString().slice(-6)}`,
      description:
        summary.Description ??
        `${intake.deviceAndModel ?? ""} ‚Äî ${intake.issue ?? intake.service ?? ""}`,
      service: summary.Service ?? intake.service ?? "Repair",
      quote,
      status: "pending",
      deposit: "$0.00",
      warrantyAcknowledged: true,
      manufacturer,
      email: intake.email ?? null,
      name: intake.name ?? null,
      phone: intake.phone ?? null,
      createdAt: Date.now(),
      raw: { intake, part },
    };

    pushMessage({ role: "assistant", content: "Saving your intake ‚Äî almost done ‚ú®" });

    try {
      const res = await authedFetch("/api/portal/invoices", {
        method: "POST",
        body: JSON.stringify(payload),
      });

      if (!res.ok) {
        const t = await res.text().catch(() => "");
        throw new Error(t || `Save failed (HTTP ${res.status})`);
      }

      pushMessage({
        role: "assistant",
        content:
          "‚úÖ All set ‚Äî your repair is queued under **Pending**. We‚Äôll take it from here and keep you updated. Thank you for choosing ETHUB ‚ú®",
      });
    } catch (err) {
      console.error("save invoice error", err);
      pushMessage({
        role: "assistant",
        content:
          "I couldn‚Äôt save that right now. Your details are safe here ‚Äî we can retry in a moment.",
      });
    }
  }

  // Render messages (carousel for parts_suggestion)
  function renderMessage(
    m: { role: Role; content: string; thinking?: boolean },
    idx: number
  ) {
    if (m.role === "assistant") {
      try {
        const parsed = JSON.parse(m.content);
        if (parsed?.type === "parts_suggestion") {
          const parts: Part[] = parsed.parts ?? [];
          return (
            <div key={idx} className="bg-gray-50 p-3 rounded-xl border shadow-sm">
              <div className="text-sm text-muted-foreground mb-2">
                Options for <b>{parsed.context?.device}</b> ‚Äî {parsed.context?.issue}
              </div>
              <div className="overflow-x-auto flex gap-4 snap-x pb-2">
                {parts.map((p: Part, i: number) => (
                  <div
                    key={i}
                    className="snap-center min-w-[280px] bg-white border rounded-xl shadow-sm p-3"
                  >
                    <div className="h-32 w-full grid place-items-center bg-gray-100 rounded">
                      {p.image ? (
                        <img src={p.image} alt={p.title} className="h-28 object-contain" />
                      ) : (
                        <div className="text-xs text-muted-foreground">No image</div>
                      )}
                    </div>
                    <div className="mt-2 font-semibold text-sm">{p.title}</div>
                    <div className="text-xs text-muted-foreground mb-1">
                      {p.eta || "About 2 hours"} ‚Ä¢ {p.type || "Premium"}
                    </div>
                    <div className="text-sm">
                      ${((p.partPrice ?? 0) + (p.labor ?? 100)).toFixed(2)}{" "}
                      <span className="text-xs text-muted-foreground">(Part + Labor)</span>
                    </div>
                    <div className="mt-2 flex gap-2">
                      <Button
                        size="sm"
                        onClick={async () => {
                          setSelectedPart(p);
                          await onApprovePart(p);
                        }}
                      >
                        Select
                      </Button>
                      {p.type !== "Premium" && (
                        <Button
                          size="sm"
                          variant="ghost"
                          onClick={() =>
                            pushMessage({
                              role: "assistant",
                              content:
                                "Noted ‚Äî if you change your mind, I can switch you to Premium anytime.",
                            })
                          }
                        >
                          Skip
                        </Button>
                      )}
                    </div>
                    <div className="mt-2 text-xs text-muted-foreground">
                      This part matches your repair and will be installed with care.
                    </div>
                  </div>
                ))}
              </div>
              <div className="mt-2 text-xs">
                You can also type <b>approve</b>, <b>approve premium</b>, or <b>approve economical</b>.
              </div>
            </div>
          );
        }
      } catch {
        // not JSON, fall through
      }
    }

    return (
      <div
        key={idx}
        className={`${
          m.role === "assistant"
            ? "bg-blue-50 text-gray-900 self-start"
            : "bg-gray-200 text-gray-800 self-end"
        } rounded-xl px-3 py-2 shadow-sm max-w-[80%] whitespace-pre-line`}
      >
        {m.content}
      </div>
    );
  }

  if (!mounted) return null;

  // Siri-like rainbow glow
  const rainbowStyle: React.CSSProperties = {
    background:
      "conic-gradient(from 0deg, #ff2d55, #ff9500, #ffcc00, #30d158, #5ac8fa, #5856d6, #ff2d55)",
    filter: "blur(10px)",
    mixBlendMode: "screen",
    pointerEvents: "none",
  };

  return (
    <>
      {ReactDOM.createPortal(
        <div className="fixed right-6 bottom-6 z-50">
          <div className="relative h-24 w-24 flex items-center justify-center">
            <motion.div
              className="absolute inset-0 rounded-full pointer-events-none"
              style={rainbowStyle}
              animate={{ rotate: 360 }}
              transition={{ repeat: Infinity, duration: 5, ease: "linear" }}
            />
            <motion.button
              aria-label="Open Assistant"
              onClick={() => {
                setOpen(true);
                if (messages.length === 0) {
                  pushMessage({
                    role: "assistant",
                    content:
                      "‚ú® Welcome ‚Äî I‚Äôm ETHUB‚Äôs Assistant. Say **start** and I‚Äôll take care of your repair intake.",
                  });
                }
              }}
              className="h-16 w-16 rounded-full bg-gradient-to-br from-indigo-600 to-blue-500 text-white shadow-2xl grid place-items-center relative z-10"
              whileHover={{ scale: 1.06 }}
              whileTap={{ scale: 1.03 }}
            >
              <Sparkles className="h-7 w-7 animate-pulse" />
            </motion.button>
          </div>
        </div>,
        document.body
      )}

      <AnimatePresence>
        {open && (
          <motion.div
            className="fixed inset-0 z-[96] bg-black/30 flex items-end justify-end"
            initial={{ opacity: 0 }}
            animate={{ opacity: 1 }}
            exit={{ opacity: 0 }}
            onClick={() => setOpen(false)}
          >
            <motion.div
              className="m-6 w-[min(880px,calc(100vw-4rem))] rounded-2xl border bg-white text-neutral-900 shadow-2xl overflow-hidden"
              onClick={(e) => e.stopPropagation()}
              initial={{ y: 60, scale: 0.98 }}
              animate={{ y: 0, scale: 1 }}
              exit={{ y: 40, opacity: 0.8 }}
              transition={{ type: "spring", stiffness: 300, damping: 25 }}
            >
              <div className="flex items-center justify-between p-3 border-b">
                <div className="flex items-center gap-2">
                  <div className="font-semibold">ETHUB Assistant</div>
                  <div className="text-xs text-muted-foreground">Repair intake</div>
                </div>
                <div className="flex items-center gap-2">
                  <Button size="icon" variant="ghost" onClick={() => setMuted(!muted)}>
                    {muted ? <MicOff className="h-5 w-5" /> : <Mic className="h-5 w-5" />}
                  </Button>
                  <Button
                    size="icon"
                    variant="ghost"
                    onClick={() => {
                      setOpen(false);
                      clearConversation();
                    }}
                    aria-label="Close assistant"
                  >
                    <X className="h-5 w-5" />
                  </Button>
                </div>
              </div>

              <div className="max-h-[70vh] overflow-auto p-4 space-y-3">
                {messages.length === 0 && (
                  <div className="text-sm text-muted-foreground">
                    Say **start** to begin. I‚Äôll prefill what I can when you‚Äôre signed in.
                  </div>
                )}
                <div className="flex flex-col gap-3">
                  {messages.map((m, i) => (
                    <div key={i} className="flex">
                      {renderMessage(m, i)}
                    </div>
                  ))}
                </div>
              </div>

              <form
                className="p-4 border-t flex gap-2"
                onSubmit={async (e) => {
                  e.preventDefault();
                  const input = e.currentTarget.querySelector("input") as HTMLInputElement;
                  const val = input?.value?.trim() ?? "";
                  if (!val) return;
                  input.value = "";
                  await handleUserInput(val);
                }}
              >
                <input
                  name="assistantInput"
                  placeholder="Type here‚Ä¶"
                  className="flex-1 rounded-md border px-3 py-2"
                  disabled={busy}
                />
                <Button type="submit" disabled={busy || !isLoaded}>
                  {busy ? "‚Ä¶" : "Send"}
                </Button>
              </form>
            </motion.div>
          </motion.div>
        )}
      </AnimatePresence>
    </>
  );
}
