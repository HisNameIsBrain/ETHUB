
"use client";

import { useEffect, useState } from "react";
import { cn } from "@/lib/utils";

export default function SiriGlowRim({ className }: { className?: string }) {
  const [mounted, setMounted] = useState(false);
  useEffect(() => setMounted(true), []);
  if (!mounted) return null;

  return (
    <div
      aria-hidden
      className={cn(
        "pointer-events-none absolute inset-0 rounded-full overflow-hidden",
        className
      )}
    >
      <div
        className={cn(
          // gradient + blur on a full surface
          "absolute inset-0 bg-siri-gradient blur-2xl opacity-95",
          // reversed motion so it doesn't sync with other loaders
          "animate-siriMoveReverse"
        )}
        // radial mask => shows only a ring near the rim
        style={{
          maskImage:
            "radial-gradient(circle at center, transparent 58%, black 60%)",
          WebkitMaskImage:
            "radial-gradient(circle at center, transparent 58%, black 60%)",
          // tweak 58/60% for thinner/thicker rim
        }}
      />
    </div>
  );
}
